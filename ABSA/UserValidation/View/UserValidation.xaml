<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    Title="Welcome"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ABSA.UserValidation" BackgroundColor="DimGray">

<StackLayout VerticalOptions="Center" Spacing="15" Padding="20">
    <Label Text= "South Africa ID Number" TextColor="White" FontAttributes="Bold" FontSize="Medium" />
    <Entry x:Name="SAIdEntry" Keyboard="Numeric" Placeholder="Please type an ID Number"/>
    <Button Text="Submit" TextColor="White" FontAttributes="Bold" BackgroundColor="DarkSlateGray" Clicked="SubmitButton_Clicked"/>
    <Button Text="Show Users" TextColor="White" FontAttributes="Bold" BackgroundColor="DarkSlateGray" Clicked="ShowUsersButton_Clicked"/>
</StackLayout>

</ContentPage>
